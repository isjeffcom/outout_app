<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/colorAccent"
    map:cardCornerRadius="4dp"
    map:cardElevation="12dp"
    android:id="@+id/p_c_single"
    >

    <android.support.v7.widget.LinearLayoutCompat
        android:id="@+id/all_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/p_c_img"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            fresco:placeholderImage="@drawable/carde" />

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/toExpandListener"
            android:clickable="true"
            android:onClick="clickToExpand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/p_c_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                android:paddingEnd="0dp"
                android:paddingLeft="@dimen/materialize_baseline_grid_x5"
                android:paddingRight="0dp"
                android:paddingStart="5dp"
                android:text="@string/astoria_title"
                android:textColor="#505050"
                android:textSize="16sp" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/p_c_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                android:paddingEnd="0dp"
                android:paddingLeft="5dp"
                android:paddingRight="0dp"
                android:paddingStart="5dp"
                android:text="@string/astoria_time"
                android:textColor="#606060"
                android:textSize="10sp" />

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="right"
                android:layout_marginRight="20dp"
                android:layout_marginTop="-32dp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/p_t_icon_et"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    fresco:placeholderImage="@drawable/nightclub_icon_grey" />

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/p_t_icon_em"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    fresco:placeholderImage="@drawable/one_to_five_icon_grey" />

            </android.support.v7.widget.LinearLayoutCompat>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#ff999999"/>

        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/more_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:clickable="true"
            android:onClick="clickToEBack">

            <TextView
                android:id="@+id/pCE_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/event_location"
                android:drawableStart="@drawable/event_location"
                android:text="testttestetset"
                android:textSize="16dp"
                android:textColor="@color/outout_dark"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"/>

            <TextView
                android:id="@+id/pCE_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/event_date"
                android:drawableStart="@drawable/event_date"
                android:text="testttestetset"
                android:textSize="16dp"
                android:textColor="@color/outout_dark"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"/>

            <TextView
                android:id="@+id/pCE_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/event_time"
                android:drawableStart="@drawable/event_time"
                android:text="testttestetset"
                android:textSize="16dp"
                android:textColor="@color/outout_dark"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:drawablePadding="10dp"/>

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:layout_marginTop="10dp"
                android:background="#ededed">

                <TextView
                    android:id="@+id/pCE_des"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:text="acdsjifsao sigjofidjgodhj sij dff sdf adsf"
                    android:textColor="@color/outout_dark" />

            </android.support.v7.widget.LinearLayoutCompat>



        </android.support.v7.widget.LinearLayoutCompat>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/p_c_addBtn"
            android:layout_width="66dp"
            android:layout_height="32dp"
            android:layout_gravity="right"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/button_border"
            android:onClick="removeFromPlanList"
            android:text="REMOVE"
            android:textColor="#333333"
            android:textSize="12dp" />


    </android.support.v7.widget.LinearLayoutCompat>

</android.support.v7.widget.CardView>